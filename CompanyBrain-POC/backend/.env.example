# CompanyBrain Backend Environment Variables

# Server Configuration
PORT=8000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/companybrain
REDIS_URL=redis://localhost:6379

# AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Google Workspace (via Pipedream MCP)
GOOGLE_MCP_URL=https://mcp.pipedream.net/YOUR_PROJECT_ID/google_docs
GOOGLE_CALENDAR_MCP_URL=https://mcp.pipedream.net/YOUR_PROJECT_ID/google_calendar
GMAIL_MCP_URL=https://mcp.pipedream.net/YOUR_PROJECT_ID/gmail

# Odoo Integration (via Pipedream MCP)
ODOO_MCP_URL=https://mcp.pipedream.net/YOUR_PROJECT_ID/odoo
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your-database-name
ODOO_USERNAME=your-odoo-username
ODOO_PASSWORD=your-odoo-password

# Context7 (Upstash)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# File Storage
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Features
ENABLE_VOICE_RECORDING=true
ENABLE_BROWSER_AUTOMATION=true
ENABLE_PERSONAL_MEMORY=true